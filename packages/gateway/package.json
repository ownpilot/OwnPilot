{
  "name": "@ownpilot/gateway",
  "version": "0.1.0",
  "description": "HTTP API gateway for OwnPilot",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:ci": "tsc --noEmit --skipLibCheck false",
    "clean": "rimraf dist coverage",
    "seed": "tsx scripts/seed-database.ts",
    "seed:triggers-plans": "tsx scripts/seed-triggers-plans.ts",
    "migrate:postgres": "tsx scripts/migrate-to-postgres.ts",
    "migrate:postgres:dry": "tsx scripts/migrate-to-postgres.ts --dry-run"
  },
  "dependencies": {
    "@composio/core": "^0.6.3",
    "@hono/node-server": "^1.19.9",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@ownpilot/core": "workspace:*",
    "archiver": "^7.0.1",
    "dotenv": "^16.6.1",
    "grammy": "1.39.3",
    "hono": "^4.12.1",
    "imapflow": "^1.2.10",
    "jose": "^6.1.3",
    "music-metadata": "^11.12.1",
    "nodemailer": "^7.0.13",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "pg": "^8.18.0",
    "pgvector": "^0.2.1",
    "sharp": "^0.34.5",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.11",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^11.10.0",
    "rimraf": "^6.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
