{
  "name": "@ownpilot/gateway",
  "version": "0.1.3",
  "description": "HTTP API gateway for OwnPilot",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --ignore .data src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:ci": "tsc --noEmit --skipLibCheck false",
    "clean": "rimraf dist coverage",
    "seed": "tsx scripts/seed-database.ts",
    "seed:triggers-plans": "tsx scripts/seed-triggers-plans.ts",
    "migrate:postgres": "tsx scripts/migrate-to-postgres.ts",
    "migrate:postgres:dry": "tsx scripts/migrate-to-postgres.ts --dry-run"
  },
  "dependencies": {
    "@composio/core": "^0.6.3",
    "@hapi/boom": "^10.0.1",
    "@hono/node-server": "^1.19.9",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "@ownpilot/core": "workspace:*",
    "@slack/socket-mode": "^2.0.5",
    "@slack/web-api": "^7.14.1",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "discord.js": "^14.25.1",
    "dotenv": "^17.3.1",
    "grammy": "1.40.1",
    "hono": "^4.12.3",
    "imapflow": "^1.2.10",
    "jose": "^6.1.3",
    "music-metadata": "^11.12.1",
    "nodemailer": "^8.0.1",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "pg": "^8.19.0",
    "pgvector": "^0.2.1",
    "pino": "^10.3.1",
    "sharp": "^0.34.5",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.63",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.2",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^12.6.2",
    "rimraf": "^6.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
