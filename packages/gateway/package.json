{
  "name": "@ownpilot/gateway",
  "version": "0.1.0",
  "description": "HTTP API gateway for OwnPilot",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "seed": "tsx scripts/seed-database.ts",
    "seed:triggers-plans": "tsx scripts/seed-triggers-plans.ts",
    "migrate:postgres": "tsx scripts/migrate-to-postgres.ts",
    "migrate:postgres:dry": "tsx scripts/migrate-to-postgres.ts --dry-run"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@ownpilot/core": "workspace:*",
    "@slack/bolt": "^4.1.0",
    "archiver": "^7.0.1",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "hono": "^4.11.7",
    "imapflow": "^1.2.8",
    "jose": "^6.0.10",
    "nodemailer": "^7.0.13",
    "pg": "^8.13.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.18.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
