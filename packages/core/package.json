{
  "name": "@ownpilot/core",
  "version": "0.1.0",
  "description": "OwnPilot Core - Zero-dependency secure gateway foundation",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.js"
      }
    },
    "./crypto": {
      "import": {
        "types": "./dist/crypto/index.d.ts",
        "default": "./dist/crypto/index.js"
      }
    },
    "./audit": {
      "import": {
        "types": "./dist/audit/index.d.ts",
        "default": "./dist/audit/index.js"
      }
    },
    "./privacy": {
      "import": {
        "types": "./dist/privacy/index.d.ts",
        "default": "./dist/privacy/index.js"
      }
    },
    "./plugin": {
      "import": {
        "types": "./dist/plugin/index.d.ts",
        "default": "./dist/plugin/index.js"
      }
    },
    "./gateway": {
      "import": {
        "types": "./dist/gateway/index.d.ts",
        "default": "./dist/gateway/index.js"
      }
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs');const path=require('path');const src='src/agent/providers/configs';const dst='dist/agent/providers/configs';fs.readdirSync(src).filter(f=>f.endsWith('.json')).forEach(f=>fs.copyFileSync(path.join(src,f),path.join(dst,f)));console.log('Copied provider configs to dist')\"",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ownpilot/ownpilot.git",
    "directory": "packages/core"
  },
  "homepage": "https://ownpilot.com",
  "keywords": ["ai", "gateway", "security", "privacy", "encryption", "audit", "plugin"],
  "author": "OwnPilot",
  "license": "MIT"
}
