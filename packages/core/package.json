{
  "name": "@ownpilot/core",
  "version": "0.1.2",
  "description": "OwnPilot Core - Secure AI agent engine and tool framework",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.js"
      }
    },
    "./crypto": {
      "import": {
        "types": "./dist/crypto/index.d.ts",
        "default": "./dist/crypto/index.js"
      }
    },
    "./audit": {
      "import": {
        "types": "./dist/audit/index.d.ts",
        "default": "./dist/audit/index.js"
      }
    },
    "./privacy": {
      "import": {
        "types": "./dist/privacy/index.d.ts",
        "default": "./dist/privacy/index.js"
      }
    },
    "./plugin": {
      "import": {
        "types": "./dist/plugin/index.d.ts",
        "default": "./dist/plugin/index.js"
      }
    },
    "./gateway": {
      "import": {
        "types": "./dist/gateway/index.d.ts",
        "default": "./dist/gateway/index.js"
      }
    }
  },
  "files": [
    "dist",
    "data",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:ci": "tsc --noEmit --skipLibCheck false",
    "clean": "rimraf dist coverage"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "eslint": "^10.0.1",
    "rimraf": "^6.1.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ownpilot/ownpilot.git",
    "directory": "packages/core"
  },
  "homepage": "https://ownpilot.com",
  "keywords": [
    "ai",
    "gateway",
    "security",
    "privacy",
    "encryption",
    "audit",
    "plugin"
  ],
  "author": "OwnPilot",
  "license": "MIT"
}
